{
  "xsappname": "trexima-v4",
  "tenant-mode": "dedicated",
  "description": "TREXIMA v4.0 Security Configuration",
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Administrator access to TREXIMA"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "Standard user access to TREXIMA"
    }
  ],
  "role-templates": [
    {
      "name": "Admin",
      "description": "Administrator role with full access",
      "scope-references": [
        "$XSAPPNAME.Admin",
        "$XSAPPNAME.User"
      ]
    },
    {
      "name": "User",
      "description": "Regular user role",
      "scope-references": [
        "$XSAPPNAME.User"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "TREXIMA_Admin",
      "description": "TREXIMA Administrator Role Collection",
      "role-template-references": [
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "name": "TREXIMA_User",
      "description": "TREXIMA User Role Collection",
      "role-template-references": [
        "$XSAPPNAME.User"
      ]
    }
  ],
  "oauth2-configuration": {
    "redirect-uris": [
      "https://*.cfapps.*.hana.ondemand.com/**",
      "http://localhost:*/**"
    ]
  }
}
